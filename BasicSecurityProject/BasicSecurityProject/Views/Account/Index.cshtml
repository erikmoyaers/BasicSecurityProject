@{
    ViewBag.title = "Welcome";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css">
</head>

<div class="container-fluid">
    <div class="row align-items-center">
        <div class="col-6 offset-3">
            <h1 class="w-25 mx-auto d-block"><u>Welkom</u></h1>
        </div>
        <div class="col-12">
            <form class="w-100 mx-auto d-block" id="userInput">

                <div class="row align-items-center">
                    <div class="offset-3 col-3">
                        <label class="w-100 mx-auto d-block">Username</label>
                    </div>
                    <div class="col-3">
                        <input class="w-100 mx-auto d-block" type="text">
                    </div>
                </div>

                <div class="row align-items-center">
                    <div class="offset-3 col-3">
                        <label class="w-100 mx-auto d-block">Wachtwoord</label>
                    </div>
                    <div class="col-3">
                        <input class="w-100 mx-auto d-block" type="text">
                    </div>
                </div>

                <div class="row align-items-center">
                    <div class="offset-3 col-3">
                        <button class="w-100 mx-auto d-block" type="submit">Inloggen</button>
                    </div>
                    <div class="col-3">
                        <a asp-action="Register" class="w-100 mx-auto d-block">Nog geen account? registreer je hier</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>



