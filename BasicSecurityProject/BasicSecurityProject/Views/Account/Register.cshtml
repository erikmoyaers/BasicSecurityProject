@model BasicSecurityProject.ViewModel.AccountViewModel

@{
    ViewBag.Title = "Register";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css">
</head>

<div class="container-fluid">
    <div class="row align-items-center">
        <div class="col-6 offset-3">
            <h1 class="w-25 mx-auto d-block"><u>Registratie</u></h1>
        </div>
        <div class="col-12">
            <form method="post" class="w-100 mx-auto d-block" id="userInput">

                <div class="row align-items-center">
                    <div class="offset-3 col-3">
                        <label asp-for="Username" class="w-100 mx-auto d-block">Username</label>
                    </div>
                    <div class="col-3">
                        <input asp-for="Username" class="w-100 mx-auto d-block" type="text">
                    </div>
                    <span asp-validation-for="Username"></span>
                </div>

                <!--nog niet ingesteld voor binding, paswoord mag niet opgeslagen worden-->
                <div class="row align-items-center">
                    <div class="offset-3 col-3">
                        <label asp-for="Password" class="w-100 mx-auto d-block">Wachtwoord</label>
                    </div>
                    <div class="col-3">
                        <input asp-for="Password" class="w-100 mx-auto d-block" type="text">
                    </div>
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="row align-items-center">
                    <div class="offset-3 col-3">
                        <label asp-for="PasswordAgain" class="w-100 mx-auto d-block">Bevestig wachtwoord</label>
                    </div>
                    <div class="col-3">
                        <input asp-for="PasswordAgain" class="w-100 mx-auto d-block" type="text">
                    </div>
                    <span asp-validation-for="PasswordAgain"></span>
                </div>

                <div class="row align-items-center">
                    <div class="offset-3 col-3">
                        <button class="w-100 mx-auto d-block" type="submit">Registratie voltooien</button>
                    </div>
                    <div class="col-3">
                        <a asp-action="Index" class="w-100 mx-auto d-block">Terug naar inlogscherm</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>



